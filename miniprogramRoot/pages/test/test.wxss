.submit-test {
  width: 100%;
  height: 260rpx;
  padding-top: 50rpx;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}


.submit-test button {
  width: 55%;
  height: 70rpx;
  line-height: 70rpx;
  font-size: .9rem;
  font-weight: normal;
  border: none;
  background-color: var(--main);
  color: #fff;
  border-radius: 12rpx;
}

