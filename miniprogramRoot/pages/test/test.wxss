page, .page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  background-color: #eee;
  padding: 17rpx;
  font-family: '微软雅黑';
}

.body {
  width: 100%;
  height: 100%;
  margin: 0;
  /* background-color: greenyellow; */
}

.body::before {
  content: '';
  display: flex;
}

.choice-qs {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  
  padding: 25rpx;
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 12rpx;
}

.choice-qs .title {
  display: flex;
  justify-content: space-between;
  width: 100%;
  font-size: .9rem;
  line-height: 50rpx;
  position: relative;
  color: rgba(0, 0, 0, .9);
}

.choice-qs .title text:first-child {
  width: 45rpx;
  flex: 0 0 auto;
  font-weight: bold;
  color: var(--main);
}

.choice-qs .title text:last-child {
  flex: 1 1 auto;
}



.choice-qs  .option {
  width: 100%;
  display: flex;
  flex: 1 1 auto;
  padding: 0 35rpx;
  box-sizing: border-box;
  flex-direction: column;

}

.choice-qs .option .item {
  display: flex;
  align-items: center;
  width: 100%;
  height: 90rpx;
  font-size: 30rpx;

  border-radius: 10rpx;

  transform: scale(1, 1);
  transition: all 0.1s ease-in-out 0s;
  padding-left: 20rpx;
  position: relative;
}

.choice-qs + .choice-qs {
  margin-top: 50rpx;
}


.rd {
  display: none;
}

.item text {
  position: relative;
  font-size: .8rem;
  color: rgba(0, 0, 0, .7);
}

.item[aria-checked='true'] text {
  color: rgba(0, 0, 0, .9);
}

.item[aria-checked='true'] text::after{
  content: '';
  width: 110%;
  height: 25rpx;
  position: absolute;
  left: -5%;
  bottom: -7rpx;
  border-radius: 20rpx;
  z-index: -5;
  background-image: linear-gradient(to right, rgba(108, 92, 231, .8) 0%,
   rgba(162, 155, 254, .5) 100%);
}


/* -----------
