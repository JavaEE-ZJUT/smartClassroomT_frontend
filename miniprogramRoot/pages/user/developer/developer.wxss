page {
  width: 100%;
  height: 100%;
  background-color: var(--white);
}

/* ---------------------
    开发者信息
   ---------------------- */

.developer {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.developer-info {
  width: 100%;
  height: 200rpx;
  padding-top: 70rpx;
}

.item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  color: #b2bec3;
  line-height: 50rpx;
}

.item + .item {
  margin-top: 30rpx;
}

.item .label {
  font-size: 35rpx;
  font-weight: bold;
  color: #ff7889;
  padding-right: 10rpx;
}


/* -------------------
    音乐播放器
 --------------------- */

.player {
  /* background-color: aqua; */
  margin-top: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.player > image {
  display: block;
  width: 450rpx;
  height: 450rpx;
  flex: 0 0 auto;
  border-radius: 100%;
  border: 13rpx solid rgba(223, 230, 233, .3);
  box-shadow: 0 0 3rpx rgba(178, 190, 195, .5);
}

.trans {
  transition: transform 500ms linear;
}


/* 旋转动画 */
.rotate {
    animation: rotate 25s linear; 
}

@keyframes rotate {
  0% {
    transform: rotate(0deg);
  }

  20% {
    transform: rotate(72deg);
  }

  40% {
    transform: rotate(144deg);
  }

  60% {
    transform: rotate(216deg);
  }

  80% {
    transform: rotate(288deg) forwards;
  }

  100% {
        transform: rotate(360deg);
  }
}


/* 歌名 */

.song-name {
  margin-top: 20rpx;
  font-size: 30rpx;
  width: 100%;
  text-align: center;
  color: var(--pink);
}


/* 进度条 */

.progress-bar {
  width: 600rpx;
  height: 6rpx;
  margin-top: 30rpx;
  border-radius: 100rpx;
  background-color: #dfe6e9;
}

.progress-bar view {
  height: 100%;
  border-radius: 100rpx;
  background-color: var(--red);
  width: 0;
}


/* 控制条 */
.player .control-bar {
  margin-top: 10rpx;
  width: 100%;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}


.control-bar > view {
  width: 70rpx;
  height: 70rpx;
  margin: 50rpx;
  border-radius: 100%;
}

.control-bar .start {
  width: 100rpx;
  height: 100rpx;
}

.control-bar image {
  width: 100%;
  height: 100%;
  /* background-color: aqua; */
}