page {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.feedback {
  width: 100%;
  height: 60%;
}

.feedback form {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.feedback .cu-form-group {
  margin-top: 100rpx;
  padding: 25rpx;
  width: 100%;
  height: 300rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;

}

.cu-form-group textarea {
  width: 100%;
  height: 100%;
}

.btn {
  width: 100%;
  background-color: var(--white);
  display: flex;
  justify-content: center;
}


.btn button {
  width: 50%;
  padding: 40rpx 0;
  margin: 70rpx auto;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  font-size: 28rpx;
  height: 64rpx;
  line-height: 1;
  text-align: center;
  text-decoration: none;
  color: var(--white);
  background-color: var(--main);
}

.btn button::after {
  content: "";
  display: block;
  width: 200%;
  height: 200%;
  position: absolute;
  top: 0;
  left: 0;
  border: 1rpx solid currentColor;
  transform: scale(0.5);
  transform-origin: 0 0;
  box-sizing: border-box;
  border-radius: 12rpx;
  z-index: 1;
  pointer-events: none;
}