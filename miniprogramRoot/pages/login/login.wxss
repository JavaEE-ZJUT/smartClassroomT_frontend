page {
  width: 100%;
  height: 100%;
}

.login {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #fafafa;
}

.sbar {
  width: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background-color: var(--main);
}

.form {
  width: 75%;
  height: 50%;
  display: flex;
  flex-direction: column;
}

.form radio {
  display: none;
}

.form radio-group {
  width: 100%;
}

.form input {
  width: 100%;
  padding: 15rpx;
  height: 90rpx;
  box-sizing: border-box;
  border-radius: 15rpx;
  color: rgba(0, 0, 0, .4);
  font-size: .9rem;
  border: 10rpx solid rgba(0, 0, 0, 0);
  position: relative;
}

.form-item + .form-item {
  margin-top: 50rpx;
  display: block;
}

.form-item[aria-checked="true"] input {
    border: 10rpx solid rgba(108, 92, 231, 0.7);
}

.form-item input::after {
  content: attr(data-ph);
  position: absolute;
  top: 15rpx;
  left: 15rpx;
  font-size: 1rem;
}


.form button {
  margin-top: 50rpx;
  width: 85%;
  background-color: var(--main);
  color: #fff;
  font-size: 1rem;
  font-weight: normal;
}
