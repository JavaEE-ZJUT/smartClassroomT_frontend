<!--pages/homework/paper_problem_detail/paper_problem_detail.wxml-->
<view class="page">
    <view class='arrow' bindtap='back'></view>
    <view class="body" style="padding-top:100px;">
        <view style="font-size:25px;color:var(--main);text-align:center;margin-bottom:50px">{{paperName}}</view>
        <view class="choice-qs {{fold!=item.problemId ? 'fold' : ''}}" wx:for="{{paper}}" wx:key="unique" data-id="{{item.problemId}}" bindtap="fold">

            <view class="title">
                <text>{{index+1}}.</text>
                <text>{{item.problemInfo}}</text>
                <text class="icon-right"></text>
            </view>

            <view class="option">

                <view class="item {{item.problemAns == 1 ? 'active' : ''}}">
                    <text>A. </text>
                    <text style="width: 175px;margin-right: 20px;">{{item.problemChoose1}}</text>
                    <text style="font-size:12px;">选择人数：</text>
                    <text>{{item.studentAns1}}</text>
                </view>

                <view class="item {{item.problemAns == 2 ? 'active' : ''}}">
                    <text>B. </text>
                    <text style="width: 175px;margin-right: 20px;">{{item.problemChoose2}}</text>
                    <text style="font-size:12px;">选择人数：</text>
                    <text>{{item.studentAns2}}</text>
                </view>

                <view class="item {{item.problemAns == 3 ? 'active' : ''}}">
                    <text>C. </text>
                    <text style="width: 175px;margin-right: 20px;">{{item.problemChoose3}}</text>
                    <text style="font-size:12px;">选择人数：</text>
                    <text>{{item.studentAns3}}</text>
                </view>

                <view class="item {{item.problemAns == 4 ? 'active' : ''}}">
                    <text>D. </text>
                    <text style="width: 175px;margin-right: 20px;">{{item.problemChoose4}}</text>
                    <text style="font-size:12px;">选择人数：</text>
                    <text>{{item.studentAns4}}</text>
                </view>
            </view>
            <view class="explain">
                {{item.problemExplain}}
            </view>
        </view>
    </view>
</view>
