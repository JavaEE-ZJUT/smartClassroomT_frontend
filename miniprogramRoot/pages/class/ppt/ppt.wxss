page, .ppt {
  width: 100%;
  height: 100%;
}



.ppt {
  padding: 30rpx;
  background-color: var(--bg);
}

.ppt .item {
  width: 100%;
  height: 200rpx;
  padding: 20rpx 50rpx;
  margin-top: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  border-radius: 10rpx;
}


.item .title {
  font-size: 30rpx;
  color: rgba(0, 0, 0, .5);
}

.item image {
  width: 80rpx;
  height: 80rpx;
}

.item image:last-child {
  width: 55rpx;
  height: 55rpx
}