page, .info {
  width: 100%;
  height: 100%;
}



.info {
  display: flex;
  flex-direction: column;
  align-items: center;
  color: rgba(0, 0, 0, .7);
}

.class-info {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 25rpx;
}


.class-info > image {
  margin-top: 50rpx;
  margin-bottom: 30rpx;
  width: 140rpx;
  height: 140rpx;
}

.class-info > .number {

  width: 100%;
  padding: 10rpx;
  text-align: center;
  font-size: 1rem;
}


.class-info > .invite {
  width: 65%;
  padding: 20rpx 30rpx;
  text-align: center;
  font-size: 1rem;
  border-radius: 12rpx;
  background-color: var(--main);
  color: #fff;
  margin-top: 50rpx;
  margin-bottom: 50rpx;
}



.info .show-info {
  width: 100%;
  height: 400rpx;
  padding: 25rpx;
  /* background-color: yellowgreen; */
  display: flex;
  flex-direction: column;
  align-items: stretch;
}

.show-info .item {
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  font-size: .9rem;
  color: rgba(0, 0, 0, .7);
  padding: 0 35rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.show-info .item:first-child {
  margin-bottom: 20rpx;
  
  border-radius: 12rpx;
}

.show-info .item:nth-child(2) {
  border-radius: 12rpx 12rpx 0 0;
}

.show-info .item:nth-child(3) {
  border-radius: 0 0 12rpx 12rpx;
}








