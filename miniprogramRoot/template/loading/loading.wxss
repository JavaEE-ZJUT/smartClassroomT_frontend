/* ------------------
    loadinging动画
  ------------------- */

.loading {
  width: 65rpx;
  height: 40rpx;
  text-align: center;
  font-size: 10px;
  position: absolute;
  top: calc(50% - 35rpx);
  left: calc(50% - 20rpx);
  display: flex;
  justify-content: space-around;
  align-items: center;

  overflow: visible;

  /* background-color: aqua; */

}

.loading > view {
  border-radius: 10rpx;
  background-color: var(--main-red);
  height: 100%;
  width: 10rpx;
  animation: stretchdelay 1.2s infinite ease-in-out;
}

/* .loading .rect1 {
  height: 70%;
} */


.loading .rect2 {
  /* height: 85%; */
  animation-delay: -1.1s;
}

.loading .rect3 {
  /* height: 100%; */
  animation-delay: -1.0s;
}

.loading .rect4 {
  /* height: 85%; */
  animation-delay: -0.9s;
}

.loading .rect5 {
  /* height: 70%; */
  animation-delay: -0.8s;
}

@keyframes stretchdelay {
0%, 40%, 100% {
  transform: scaleY(1.0);
}

20% {
  transform: scaleY(1.8);
}
}



